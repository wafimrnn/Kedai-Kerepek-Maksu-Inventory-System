    <description></description>
    <display-name>SaleItemDAO</display-name>
    <servlet-name>SaleItemDAO</servlet-name>
    <servlet-class>com.dao.SaleItemDAO</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SaleItemDAO</servlet-name>
    <url-pattern>/SaleItemDAO</url-pattern>
  </servlet-mapping>

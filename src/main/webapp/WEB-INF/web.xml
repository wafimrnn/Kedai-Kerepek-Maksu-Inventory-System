    <servlet-class>com.controller.CompleteSaleServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CompleteSaleServlet</servlet-name>
    <url-pattern>/complete-sale</url-pattern>
  </servlet-mapping>
